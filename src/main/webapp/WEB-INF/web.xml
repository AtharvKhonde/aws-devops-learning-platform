<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>AWS DevOps Learning Platform</display-name>
    
    <!-- Home Controller - handles root path -->
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>com.awslearning.controller.HomeController</servlet-class>
    </servlet>
    
    <!-- Map HomeController to root path "/" -->
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <!-- Map HomeController to /roadmap -->
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/roadmap</url-pattern>
    </servlet-mapping>
    
    <!-- Topic Controller - handles all topic-related pages -->
    <servlet>
        <servlet-name>TopicController</servlet-name>
        <servlet-class>com.awslearning.controller.TopicController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TopicController</servlet-name>
        <url-pattern>/topics/*</url-pattern>
    </servlet-mapping>
    
    <!-- DO NOT include welcome-file-list to avoid conflicts -->
    
</web-app>